@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="container mt-5">
    <h1 class="text-center display-6 mb-4">Expenses</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Cost</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.Id</td>
                        <td>@expense.Title</td>
                        <td>@expense.Description</td>
                        <td>₹@expense.Cost</td>
                        <td>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id" class="btn btn-danger btn-sm rounded-3">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
